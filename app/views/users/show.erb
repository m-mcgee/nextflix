<%= erb :'/users/_profile_header', locals: {user: user} %>

<% if current_user == user  %>
	
	<% if current_user.lists.length < 1 %>
	  <div class="new-user"></div>
	<% end %>
 
	<div class="ui pointing secondary menu">
	  <div class="active item" data-tab="my-lists">Your Lists <a id="new-list" class="new-list" href="/lists/new"><i class="inverted green plus icon" ></i></a>
	  	<%= erb :'/lists/_new' %></div>
	  <div class="item" data-tab="lists-followed">Favorites</div>
	  <div class="item" data-tab="user-feed">Feed</div>
	</div>
	<div class="ui active tab " data-tab="my-lists">
	  <%= erb :'/lists/_my_lists', locals: {lists: lists, user: user} %>
	</div>
	<div class="ui tab" data-tab="lists-followed">
	  <%= erb :'/lists/_followed_lists', locals: {lists: current_user.followed_lists} %>
	</div>
	<div class="ui tab" data-tab="user-feed">
	  <%= erb :'index', locals: { updates: updates } %>
	</div>
<% else %>
	<%= erb :'/lists/_my_lists', locals: {lists: lists, user: user} %>
<% end %>
