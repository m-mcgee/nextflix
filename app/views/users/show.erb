<% if current_user.id == user.id %>
	<h1>Welcome, <%= current_username %>!</h1>

  <h3 class="your-lists">Your lists</h3>
  <a href="/lists/new"><i class="bordered inverted green plus icon" ></i></a>

  <% if user.lists %>
  	<% user.lists.each do |list| %>
  		<h4><a href="/lists/<%= list.id %>"><%= list.name %></a></h4>

  		<p><%= list.description %></p>
  		<%= erb :'/lists/_show', locals: {list: list} %>


  	<% end %>
  <% else %>
  	<h4>You have no lists. </h4>
  <% end %>

	<form action="/list/<%= current_user.id %>/movies" method="post" class="ui icon input ">
	  <input type="text" name="movie_search" placeholder="Add a movie...">
	  <i class="search icon"></i>
	  <input type="submit" value="Search">
	</form>


	<% if movies_found %>

		<div id="searched-titles" class="ui grid">

			<% movies_found["results"].each do |movie|%>
			<div class="movie-found four wide column">

					<div class="ui special cards ">
					  <div class="card">
					    <div class="blurring dimmable image">
					      <div class="ui dimmer">
					        <div class="content">

					          <div data-id="<%= movie["id"] %>" data-url="/users/<%= current_user %>" class="center">
					            <div class="ui inverted button addlist">Add to list</div>
					          </div>
					        </div>
					      </div>
					      <img src="<%= movie["poster_400x570"] %>">
					    </div>
					    <div class="content">
					      <a class="header"><%= movie["title"] %></a>
					      <div class="meta">
					        <span class="date"><%= movie["release_year"].to_s %></span>
					      </div>
					    </div>
					  </div>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>

<% else %>
	<h1><%= user.username %>'s lists</h1>

	<% if user.lists %>
  	<% user.lists.each do |list| %>
  		<h4><%= list.name %></h4>
  		<p><%= list.description %></p>
  	<% end %>
  <% else %>
  	<h4><%= user.username %> has no lists. </h4>
  <% end %>




<% end %>
