<div class="ui basic modal follow-stats-view followers-view">
	<i class="close icon"></i>
	<div class="header">
		<h1>Followers</h1>
	</div>

	<div class="content">
		<div class="ui middle aligned divided list">
			<% user.followers.each do |follower| %>
			  <div class="item">
			    <div class="right floated content">
			    	<% if current_user.is_following?(follower) %>
			    		<div class="ui button">Following</div>
			    	<% else %>
			      	<div class="ui button">Follow</div>
			      <% end %>
			    </div>
			    <img class="ui avatar image" src="">
			    <div class="content">
			      <a href="/users/<%= follower.id %>"><%= follower.username %></a>
			    </div>
			  </div>
			<% end %>
		</div>
	</div>

</div>






