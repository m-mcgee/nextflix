<div class="ui basic modal follow-stats-view following-view">
	<i class="close icon"></i>
	<div class="header">
		<h1>Following</h1>
	</div>

	<div class="content">
		<div class="ui middle aligned divided list">
			<% user.following.each do |followed| %>
			  <div class="item">
			    <div class="right floated content">
			    	<% if current_user.is_following?(followed) %>
			    		<div class="ui button">Following</div>
			    	<% else %>
			      	<div class="ui button">Follow</div>
			      <% end %>
			    </div>
			    <img class="ui avatar image" src="<%= followed.img %>">
			    <div class="content">
			      <a href="/users/<%= followed.id %>"><%= followed.username %></a>
			    </div>
			  </div>
			<% end %>
		</div>
	</div>

</div>






